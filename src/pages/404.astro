---
import Logo from "../components/Logo.astro";
import Layout from "../layouts/Layout.astro";
---

<div class="container mx-auto px-4 py">
  <Layout>
    <!-- Title section -->
    <div class="py-20 flex items-center justify-center">
      <Logo />
    </div>

    <!-- Posts section -->
    <div
      class="py-15 space-y-6 w-96 text-justify content-center mx-auto"
      x-init="$store.menuToggle.clickIcon()"
    >
      <h2 class="text-4xl font-bold font-coder pb-10">
        you gotta <span class="animate-ping">&uarr;</span>
      </h2>
      <h2 class="text-4xl font-bold">
        it's <span class="animate-pulse">404</span>
      </h2>
    </div>
  </Layout>
</div>
