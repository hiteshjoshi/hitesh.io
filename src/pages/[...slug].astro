---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import FormattedDate from "../components/FormattedDate.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<Logo />
<Layout {...post.data}>
  <div class="w-1/2 mx-auto">
    <div>
      <div class="my-5">
        <!-- dark:prose-invert  -->
        <article
          class="prose prose-h1:font-bold prose-h1:text-xl prose-a:text-blue-600 prose-p:text-justify prose-img:rounded-xl"
        >
          <h2 class="text-3xl font-semibold mb-0">{post.data.title}</h2>
          <span class="text-gray-500 text-right text-xs"
            ><FormattedDate
              date={post.data.updatedDate || post.data.pubDate}
            /></span
          >
          <Content />
        </article>
      </div>
    </div>
  </div>
</Layout>
<style>
