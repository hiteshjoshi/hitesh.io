---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    x-data="{slideOverOpen: false }"
    class="bg-white text-gray-800 antialiased"
  >
    <a
      href="/"
      class="flex items-center mt-4 uppercase p-4 space-x-2 font-extrabold text-gray-900 md:py-0"
    >
      <span
        class="flex items-center justify-center w-8 h-8 text-white bg-gray-900 rounded-full"
      >
        <svg
          class="w-auto h-5 -translate-y-px"
          viewBox="0 0 69 66"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m31.2 12.2-3.9 12.3-13.4.5-13.4.5 10.7 7.7L21.8 41l-3.9 12.1c-2.2 6.7-3.8 12.4-3.6 12.5.2.2 5-3 10.6-7.1 5.7-4.1 10.9-7.2 11.5-6.8.6.4 5.3 3.8 10.5 7.5 5.2 3.8 9.6 6.6 9.8 6.4.2-.2-1.4-5.8-3.6-12.5l-3.9-12.2 8.5-6.2c14.7-10.6 14.8-9.6-.4-9.7H44.2L40 12.5C37.7 5.6 35.7 0 35.5 0c-.3 0-2.2 5.5-4.3 12.2Z"
            fill="currentColor"></path></svg
        >
      </span>
      <span>Hitesh's blog</span>
    </a>

    <Navigation />

    <!-- Main container -->
    <div class="container mx-auto px-4 py" @mouseover="slideOverOpen=false">
      <!-- Title section -->
      <div class="text-center py-10">
        <h1 class="text-5xl font-bold">read.</h1>
      </div>

      <!-- Posts section -->
      <div class="space-y-6">
        <div class="text-center">
          <h2 class="text-2xl font-semibold">Rolling.</h2>
          <p class="text-gray-500">June 22 2017</p>
        </div>
        <div class="text-center">
          <h2 class="text-2xl font-semibold">Introduce.</h2>
          <p class="text-gray-500">June 10 2016</p>
        </div>
        <div class="text-center">
          <h2 class="text-2xl font-semibold">Largescale.</h2>
          <p class="text-gray-500">June 01 2016</p>
        </div>
        <div class="text-center">
          <h2 class="text-2xl font-semibold">Styling.</h2>
          <p class="text-gray-500">June 01 2016</p>
        </div>
        <div class="text-center">
          <h2 class="text-2xl font-semibold">Beginning.</h2>
          <p class="text-gray-500">June 01 2016</p>
        </div>
      </div>

      <!-- Down arrow -->
      <div class="text-center py-10">
        <div class="text-3xl">&darr;</div>
      </div>

      <!-- Placeholder for blog description -->
      <p class="text-center text-gray-500 italic my-10">
        Blog description goes here.
      </p>

      <!-- Footer section -->
      <div class="flex justify-center space-x-4 py-5 border-t-2">
        <a href="#" class="text-gray-800 hover:text-gray-600">Home</a>
        <a href="#" class="text-gray-800 hover:text-gray-600">About</a>
        <a href="#" class="text-gray-800 hover:text-gray-600">Contact</a>
        <a href="#" class="text-gray-800 hover:text-gray-600">404 page</a>
      </div>
    </div>
  </body>
</html>
