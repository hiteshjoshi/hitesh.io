---
import Layout from "../layouts/Layout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { getCollection } from "astro:content";
const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<Layout>
  <!-- Title section -->
  <div class="text-center py-10">
    <h1 class="font-bold font-coder">mo<br/><span class="-y-10">v e</span></h1>
  </div>

  <!-- Posts section -->
  <div class="space-y-6 w-96 content-center mx-auto">
    {
      posts.map((post) => (
        <div class="text-justify">
          <a href=`/${post.slug}`><h2 class="text-2xl font-semibold">{post.data.title}</h2></a>
          <span class="text-gray-500 text-right text-xs">
            <FormattedDate date={post.data.updatedDate || post.data.pubDate} />
          </span>
        </div>
      ))
    }
  </div>

  <!-- Down arrow -->
  <!-- <div class="text-center py-10">
        <div class="text-3xl">&darr;</div>
      </div>
	   -->
</Layout>
