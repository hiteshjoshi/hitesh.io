---
import Layout from "../layouts/Layout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { getCollection } from "astro:content";
const posts = (await getCollection("blog",({ data }) => {
    data.isDraft !== true;
    return data;
  })).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<Layout>
  <div class="container mx-auto px-4 py">
    <div class="flex flex-col items-center justify-center">
      <div class="text-justify">
        {
          posts.map((post) => (
          <div class="py-4 dark:text-gray-100">
              <a data-astro-prefetch href=`/${post.slug}/`><h2 class="text-2xl font-semibold">{post.data.title}</h2></a>
              <span class="dark:dark:text-gray-600 text-gray-500 text-right text-xs">
                <FormattedDate date={post.data.updatedDate || post.data.pubDate} />
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
